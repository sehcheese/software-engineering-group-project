<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button"
        android:layout_marginTop="50dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose A Building"
        android:id="@+id/button"
        android:layout_below="@+id/switch2"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="OpenSans"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Emergency Information"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="20dp"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textOn="Fire Escape Maps"
        android:textOff="Tornado Shelter Maps"
        android:id="@+id/switch2"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/textView1"
        android:layout_below="@id/switch2"
        android:textColor="#000000"
        android:textSize="20dp"
        android:text="No Fire Escape Map Currently Posted"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:visibility="invisible"/>

    </RelativeLayout>
</ScrollView>